<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalContactList">

    <SearchView
        android:id="@+id/searchPersonalContacts"
        android:layout_width="282dp"
        android:layout_height="58dp"
        android:layout_marginTop="176dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="284dp"
        android:layout_height="410dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchPersonalContacts">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnPersonalContact1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ShowFullName" />

            <Button
                android:id="@+id/btnPersonalContact2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ShowFullName" />

            <Button
                android:id="@+id/btnPersonalContact3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ShowFullName" />

            <Button
                android:id="@+id/btnPersonalContact4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ShowFullName" />

            <Button
                android:id="@+id/btnPersonalContact5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ShowFullName" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvPersonalContactList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/PersonalContacts"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPersonalContactListAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="68dp"
        android:text="@string/Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPersonalContactListEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="108dp"
        android:text="@string/Edit"
        app:layout_constraintEnd_toStartOf="@+id/btnPersonalContactListAddContact"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>